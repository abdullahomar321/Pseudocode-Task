#include <stdio.h>

int main()
{
    int n1,n2,n3;
    printf("Enter 3 numbers");
    scanf("%d",&n1);
    scanf("%d",&n2);
    scanf("%d",&n3);
    if(n1>n2 && n1>n3){
        if(n2>n3){
            printf("%d is largest, then %d and then %d",n1,n2,n3);
        }
        else if(n3>n2){
            printf("%d is largest, then %d and then %d",n1,n3,n2);
            
        }
    }
    else if(n2>n1 && n2>n3){
        if(n1>n3){
            printf("%d is largest, then %d and then %d",n2,n1,n3);
        }
        else if(n3>n1){
            printf("%d is largest, then %d and then %d",n2,n3,n1);
            
        }
        
        
    }
    else if(n3>n2 && n3>n1){
        if(n2>n1){
            printf("%d is largest, then %d and then %d",n3,n2,n1);
        }
        else if(n1>n2){
            printf("%d is largest, then %d and then %d",n3,n1,n2);
            
        }
    }

    return 0;
}
